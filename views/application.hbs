    </div>
  </nav>

 <section id="subtitle">
      <p>  EECScon 2017 Application  </p>
  </section>

<div id = "application" class="form-style-5">
  <div id = "message">{{message}}</div>
  <div id = "errors"> <a role = "button">{{errors}}</a> </div>
  <form action = "/apply" method = "post">
    <fieldset>
      <legend><span class="number">1</span> Basic Info </legend>
      <input type="text" id = "firstname" name="firstname" placeholder="First Name *" value = "{{firstname}}"required>
      <input type="text" id = "lastname" name="lastname" value = "{{lastname}}" placeholder="Last Name *" required>
      <input type="text" id = "email" name="email"  value = "{{email}}" placeholder="Your Email *" required>
       <select id="year" name="year" value = "{{year}}" required>
            <option value="" selected disabled>Year *</option>
            <option value="2017">2017</option>
            <option value="2018">2018</option>
            <option value="2019">2019</option>
            <option value="2020">2020</option>  
      </select>
      <select id="course" name="course" value = "{{course}}" required>
            <option value="" selected disabled >Course *</option>
            <option value="6-1">6-1</option>
            <option value="6-2">6-2</option>
            <option value="6-3">6-3</option>
            <option value="18">18</option>  
            <option value="Other">Other</option>  
      </select>
    </fieldset>
    <fieldset>
      <legend><span class="number">2</span> EECScon Info </legend>
      <label for="superurop">Are you doing a SuperUROP? (Required)</label>
      <select id="superurop" name="superurop" value = "{{superurop}}" required>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
      </select>
      <label for="superurop">If you answered yes to the previous question, who is your faculty advisor?</label>
      <input type="text" id = "advisor" name="advisor" value="{{advisor}}" placeholder="Faculty Advisor">
      <select id="presentation" name="presentation" value = "{{presentation}}" required>
            <option value="" disabled selected>Presentation Type *</option>
            <option value="Oral">Oral</option>
            <option value="Poster">Poster</option>
      </select>
       <select id="field" id = "field" name="field" value = "{{field}}" required>
            <option value="" disabled selected>Field *</option>
            <option value="AI">Artificial Intelligence</option>
            <option value="BioEECS">BioEECS</option>
            <option value="Circuits">Circuits and Communications</option>
            <option value="Theoretical">Theoretical Computer Science</option>  
            <option value="Systems">Computer Systems</option>  
            <option value="Physics">Applied Physics and Devices</option> 
            <option value="Other">Other</option> 
      </select>
      <label for="other">If you answered other above, please specify the field.</label>
      <input type="text" id = "specify" name="specify" value = "{{specify}}" placeholder="Field Name">
    </fieldset>
    <fieldset>
      <legend><span class="number">3</span> EECScon Abstract </legend>
       <label for="abstract">Please submit your abstract below (Max. 250 words)</label>
       <textarea id = "abstract" name="abstract" placeholder="" required>{{abstract}}</textarea>
    </fieldset>
    <input type="submit" value="Apply" />
  </form>
</div>
  

</body>
      
</html>